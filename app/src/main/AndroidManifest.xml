<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Habit_compose"
        tools:targetApi="31">

        <receiver android:name=".notification.ReminderReceiver" android:exported="true" />
        <!-- WelcomeScreenActivity (Launcher screen) -->
        <activity
            android:name=".welcome.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Habit_compose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Add these activities -->

        <!-- Add these activities -->
        <activity android:name=".auth.ForgotPasswordActivity" />
        <activity android:name=".auth.SignUpActivity" android:exported="true" />
        <activity android:name=".auth.LoginActivity" android:exported="true" />
        <activity android:name=".home.MainActivity" android:exported="true" />
        <activity
            android:name=".welcome.WelcomeScreenActivity"
            android:exported="true" />

    </application>

</manifest>
